<Window x:Class="Facturacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facturacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        SizeChanged="Window_SizeChanged">
    <Grid x:Name="gridPrincipal">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="31"/>
            <RowDefinition x:Name="Cuerpo"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Facturas" Height="32">
                <MenuItem Header="Nueva Factura" Name="menuItemAnyadirFactura" Click="menuItemAnyadirFactura_Click"></MenuItem>
                <MenuItem Header="Consultar Facturas" Name="menuItemConsultarFacturas" Click="menuItemConsultarFacturas_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <WrapPanel Name="wrpCuerpoPrincipal" Grid.Row="1"/>


    </Grid>
</Window>
